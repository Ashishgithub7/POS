<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - POS.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/POS.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex flex-column bg-dark text-white position-fixed" style="width:250px; height:100vh;">
        <h5 class="text-center p-3">POS</h5>
        <hr class="border-light mx-3"/>
        <partial name="_HomeMenuPartial"/>
        <partial name="_InventoryMenuPartial"/>
        <partial name="_LoginPartial"/>
    </div>

    <!-- Main Content -->
    <div class="ms-250" style="margin-left:250px; padding: 1rem;">
        <!-- Card for content -->
        <div class="card shadow-sm">
            <div class="card-body">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
