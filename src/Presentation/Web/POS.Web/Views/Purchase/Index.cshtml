
<div class="container">
    <h2 class="text-center my-4">Purchase Management</h2>

    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>S.N</th>
                    <th>Item</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>SubTotal</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="tblPurchaseBody"></tbody>
        </table>
    </div>

    <div class="row mt-5">
        <hr />

        <div class="row">
            <div class="col-md-6">
                
                    <div class="mb-3">
                        <label for="ddlProductName" class="form-label">Product</label>
                        <select id="ddlProductName" class="form-control" asp-items="ViewBag.Products"></select>
                        <span id="ddlProductNameError" class="text-danger d-none">Product is required</span>
                    </div>

                    <div class="mb-3">
                        <label for="txtQuantity" class="form-label">Quantity</label>
                        <input id="txtQuantity" type="number" class="form-control"/>
                    </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label for="ddlSupplierName" class="form-label">Supplier</label>
                    <select id="ddlSupplierName" class="form-control" asp-items="ViewBag.Suppliers"></select>
                    <span id="ddlSupplierNameError" class="text-danger d-none">Supplier is required</span>
                </div>

                <div class="mb-3">
                    <label class="form-label">GrandTotal</label>
                    <h4 id="txtGrandTotal">0</h4>
                </div>
            </div>  


        </div>

        <div class="row">
            <div class="col-md-6 offset-md-3 d-flex gap-2">
                <button id="btnPurchaseSave" type="button" class="btn btn-success w-50">Save</button>
                <a asp-action="Index" class="btn btn-danger w-50">Cancel</a>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    <script src="~/js/Purchase/Purchase.js" asp-append-version="true"></script>
 }